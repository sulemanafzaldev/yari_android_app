<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EFEFEF" />
            <corners android:radius="@dimen/_4sdp" />
            <stroke
                android:width="0.5dp"
                android:color="#E1E1E1" />
        </shape>
    </item>
    <item
        android:end="@dimen/_8sdp"
        android:gravity="center_vertical|end"
        android:start="@dimen/_8sdp">
        <layer-list>
            <item
                android:width="12dp"
                android:height="12dp"
                android:bottom="10dp"
                android:gravity="center"
                android:right="@dimen/_4sdp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <!-- <solid android:color="#707070" />-->
                        <stroke
                            android:width="2dp"
                            android:color="#000000" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="20dp"
                android:height="10dp"
                android:bottom="21dp"
                android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#EFEFEF" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>